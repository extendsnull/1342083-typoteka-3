extends /layouts/admin.pug

block content
  main.main-page.main-page--padding
    if comments.length
      section.main-page__publication.publication
        h1.publication__title Комментарии
        ul.publication__list
          each comment in comments
            li.publication__list-item
              .publication__header
                img.publication__list-image(src=`/img/${comment.author.avatar}` width="20" height="20" alt="Аватар пользователя")
                b.publication__list-name #{comment.author.firstName} #{comment.author.lastName}
                time.publication__item-time(datetime=comment.createdDate) #{comment.createdDate}
              a.publication__item-text(href=`${AppRoute.ARTICLE}/${comment.article.id}`) #{comment.article.title}
              p.publication__text-strong #{comment.text}
              button.publication__button.button.button--close-item(type="button")
                span.visually-hidden Закрыть строку списка
    else
      include /partials/common/empty.pug
