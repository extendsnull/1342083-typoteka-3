extends /layouts/admin.pug

block content
  -
    const isEdit = Boolean(article[ArticleKey.ID]);
    const action = isEditMode ? `${AppRoute.ARTICLES}/${article[ArticleKey.ID]}` : AppFormAction.ADD_ARTICLE;
    const method = isEditMode ? "PUT" : "POST";
    const title = isEditMode ? "Редактирование публикации" : "Новая публикация";
    const submitButtonText = isEditMode ? "Сохранить" : "Опубликовать";

  main
    section
      .popup.popup--new-publication.popup--anti
        .new-publication
          form(action=action method=method enctype="multipart/form-data")
            .new-publication__header
              h1 #{title}
              .new-publication__date-form
                h3 Дата публикации
                .new-publication__date-form-division
                  .new-publication__date-block
                    label(for="publication-date" aria-label="Календарь")
                    input#publication-date(type="text" name=FormElementKey.PUBLICATION_DATE data-value=article[ArticleKey.CREATED_DATE])
              button.new-publication__button.button.button--colored(type="submit") #{submitButtonText}
            a.popup__button.button.button--popup-close(href=AppRoute.MY aria-label="Отмена") Отмена
            .new-publication__form.form
              .form__wrapper.form__wrapper--intro
                .form__field
                  label
                    input(type="text" name=FormElementKey.TITLE placeholder="Заголовок" value=article[ArticleKey.TITLE])
                .form__field.form__field--post-image
                  label
                    input#image-name-field(type="text" name=FormElementKey.PICTURE placeholder="Фотография" value=article[ArticleKey.PICTURE] readonly)
                  .form__image-loader.form__image-loader--publication
                    label
                      input.visually-hidden(type="file" name=FormElementKey.UPLOAD)
                      | Обзор
                .new-publication__category-wrapper
                  each category in categories
                    - const isChecked = article[ArticleKey.CATEGORIES] && article[ArticleKey.CATEGORIES].some((it) => it.id === article[ArticleKey.COUNT])
                    .new-publication__checkbox
                      - const elId = `${FormElementKey.CATEGORY}-${category[CategoryKey.ID]}`;
                      input(id=elId type="checkbox" name=FormElementKey.CATEGORY value=category[CategoryKey.ID] checked=isChecked)
                      label(for=elId) #{category[CategoryKey.NAME]}
                  a.new-publication__form-link.button.button--transparent(href=AppRoute.CATEGORIES) Добавить категорию
              .form__wrapper.form__wrapper--text
                .form__field.form__field--publication-text
                  label
                    textarea(rows="5" name=FormElementKey.ANNOUNCE placeholder="Анонс публикации") #{article[ArticleKey.ANNOUNCE]}
                .form__field.form__field--publication-text
                  label
                    textarea(rows="10" name=FormElementKey.FULL_TEXT placeholder="Полный текст публикации") #{article[ArticleKey.FULL_TEXT]}
