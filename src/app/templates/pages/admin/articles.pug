extends /layouts/admin.pug

block content
  main.main-page.main-page--padding
    if articles.length
      section.main-page__notes.notes
        h1.notes__title Мои записи
        ul.notes__list
          each article in articles
            li.notes__list-item
              time.notes__item-time(datetime=article[ArticleKey.CREATED_DATE])
                | #{humanizeDate(article[ArticleKey.CREATED_DATE])}
              a.notes__item-text(href=`${AppRoute.ARTICLES}/${article[ArticleKey.ID]}`) #{article[ArticleKey.TITLE]}
              button.notes__button.button.button--close-item(type="button")
                span.visually-hidden Закрыть строку списка
      .notes__toggle-wrapper
        +pagination.notes__pagination
    else
      include /partials/common/empty.pug
