extends /layouts/admin.pug

block content
  main.main-page.main-page--padding
    if articles.length
      section.main-page__notes.notes
        h1.notes__title Мои записи
        ul.notes__list
          each article in articles
            li.notes__list-item
              time.notes__item-time(datetime=article.createdDate) #{article.createdDate}
              a.notes__item-text(href=`${AppRoute.ARTICLE}/${article.id}`) #{article.title}
              button.notes__button.button.button--close-item(type="button")
                span.visually-hidden Закрыть строку списка
    else
      include /partials/common/empty.pug
