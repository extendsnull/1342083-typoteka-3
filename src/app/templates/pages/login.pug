extends /layouts/default.pug

block content
  main
    h1.visually-hidden Регистрация пользователя
    section
      .popup.popup--registration.popup--anti
        h2.popup__title Войти
        .popup__form.form.form--log-in
          form(action=AppFormAction.LOGIN method="GET")
            .form__field
              label
                input(type="email" name=FormElementKey.EMAIL placeholder="Электронная почта" required)
            .form__field
              label
                input(type="password" name=FormElementKey.PASSWORD placeholder="Пароль" required)
            p.form__error-message Некоторая ошибка произошла, беда!
            button.form__submit-btn.form__submit-btn--log-in.button.button--colored(type="submit") Войти
