extends /layouts/default.pug

block content
  main
    h1.visually-hidden Регистрация пользователя
    section
      .popup.popup--registration.popup--anti
        h2.popup__title Войти
        .popup__form.form.form--log-in
          form(action=AppFormAction.LOGIN method="POST")
            .form__field
              label
                input(type="email" name=FormElementKey.EMAIL placeholder="Электронная почта")
            .form__field
              label
                input(type="password" name=FormElementKey.PASSWORD placeholder="Пароль")
            if errors
              +form-errors(errors, "При регистрации произошли ошибки:")
            button.form__submit-btn.form__submit-btn--log-in.button.button--colored(type="submit") Войти
