extends /layouts/default.pug

block content
  main.articles-category
    h1 #{category[CategoryKey.NAME]}
    section.articles-category__theme-list
      h2.visually-hidden Список тем
      +themes(categories, category[CategoryKey.ID])
    section.articles-category__list.preview
      h2.visually-hidden Список превью статей
      ul.preview__list
        each article in articles
          +preview-item(article)
      .preview__toggle-wrapper
        +pagination(page, totalPages).preview__pagination
